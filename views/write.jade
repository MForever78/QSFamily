extends layout/default

prepend stylesheet
    link(rel="stylesheet", href="/css/simditor.css")

prepend script
    script(src="/js/module.min.js")
    script(src="/js/hotkeys.min.js")
    script(src="/js/simditor.min.js")

block content
    include include/header

    #write-wrap
        form#write-form(action=action, method=method)
            .input-group
                label(for="news-title") 标题
                input#write-title(type="text", name="title")
            .input-group
                label(for="news-content") 内容
                textarea#write-content(col="30", rows="10", name="content")
            .input-group
                button#write-submit.btn.btn-primary 提交
