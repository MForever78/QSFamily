extends layout/default

append content
    #workspace-wrap
        #workspace-content-wrap
            header.workspace-header
                h3 选择课程
                hr
            ul.workspace-list
                if (courseList.length > 0)
                    each course in courseList
                        a(href="/workspace/" + session.user.role + "/course/" + course._id)
                            li.workspace-item
                                h4= course.name
